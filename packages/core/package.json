		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"isomorphic-git": "^1.25.0",
		"zod": "^3.22.0"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"tsup": "^8.0.0",
		"typescript": "^5.0.0"
	}
