{
	"extends": "@bitterwarden/config/tsconfig.base.json",
	"compilerOptions": {
		"jsx": "react-native",
		"lib": ["ES2022"],
		"module": "esnext",
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"types": ["react-native"],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		"**/*.jsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts"
	],
	"exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
