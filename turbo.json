{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "build/**"],
			"env": ["NODE_ENV"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": ["coverage/**"],
			"env": ["CI"]
		},
		"test:coverage": {
			"dependsOn": ["build"],
			"env": ["CI"]
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"typecheck": {
			"dependsOn": ["^build"]
		},
		"clean": {
			"cache": false
		}
	}
}
